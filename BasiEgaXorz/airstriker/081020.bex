SEGALOGO:
	datafile segalogo.bin,BIN

main:
    cls
 	LoadTiles logo,128,256
 	LoadTiles menutiles,64,456
 	LoadTiles gametiles,64,556
	pallettes titlepal,0,0,16
	if music = 1 then
		reload musicData
    	gosub tfdPlayInit
    endif
    on VBLANK gosub tfdPlayFrame
    enable INTERRUPTVBLANK
    strt = 1
    menuy = 0
    music = 1
    drawblock 256,12,5,8
    drawblock 320,20,5,8
    locate 16,5
    print "Hiscore - "; hiscore
    locate 22,0
	print "Copyright 2008 Electrokinesis Studios"
mainLoop:
	joy = joypad(0)
    if joy.7 then
		if music = 1 then
			reload menumusic
    		gosub tfdPlayInit
    	endif
    	goto mainmenu
    endif
    sleep 2
    locate 19,14
	if strt > 19 then 
		print "Press Start"
	else
		print "           "
	endif
	if strt < 41 then
		strt++
	else
		strt = 1
	endif
    goto mainLoop
    end
    
mainmenu:
	cls
	drawwires 10,3,20,5
	drawwires 12,9,23,15
	locate 3,10
	print "Main Menu"
	locate 9,12
	print "Start game"
	locate 11,12
	print "Credits"
	locate 13,12
	print "Options"
menuloop:
	joy = joypad(0)
	if joy.0 = 0 then
		up = 0
	endif
	if joy.0 and up = 0 then
		up = 1
		if menuy > 0 then
			wait = 5
			menuy = menuy - 2
		endif
	endif
	if joy.1 = 0 then
		down = 0
	endif
	if joy.1 and down = 0 then
		down = 1
		if menuy < 4 then
			wait = 5
			menuy = menuy + 2
		endif
	endif
	if joy.1 = 0 then
		down = 0
	endif
	if joy.4 and button = 0 then
		button = 1
		if menuy = 0 then
			shotb4 = 1
			levdiv = 1
			levwait = 0
			level = 1
			lives = 3
			goto game
		elseif menuy = 2 then
			goto credits
		elseif menuy = 4 then
			goto options
		endif
	endif
	if joy.4 = 0 then
		button = 0
	endif
	drawtile 464, 10, 10+menuy
	sleep 1
	drawtile 465, 10, 10+menuy
