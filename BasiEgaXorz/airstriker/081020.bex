game:
	cls
	if music = 1 then
		reload levelmusic
		gosub tfdPlayInit
	endif
	bugavoid = addsprite(1,1)
	propsprite bugavoid, 556, 0
	movesprite bugavoid, 20, 20
	for i = 0 to 4
		bs(i) = addsprite(1,1)
		propsprite bs(i), 566, 0
		bsx(i) = rnd(320) + 128
		bsy(i) = rnd(125)
		movesprite bs(i), bsx(i), bsy(i)
		ms(i) = addsprite(1,1)
		propsprite ms(i), 567, 0
		msx(i) = rnd(320) + 128
		msy(i) = rnd(125)
		movesprite ms(i), msx(i), msy(i)
	next
	shipx = 272
	shipy = 310
	ship = addsprite(3,3)
	propsprite ship, 556, 0
gameloop:
	joy = joypad(0)
	if joy.2 then
		if shipx > 140 then
			shipx = shipx - 5
		endif
	endif
	if joy.3 then
		if shipx < 410 then
			shipx = shipx + 5
		endif
	endif
	if joy.4 and shotb4 = 0 then
		if b = 0 then
			shotb4 = 1
			freeshot = 10
			for b = 0 to 9
				if shot(b) = 0 then
					goto shoot
				else
					freeshot--
				endif
			next
			if freeshot = 0 then
				goto shootfail
			endif
shoot:
			shot(b) = addsprite(1,3)
			shotx(b) = shipx
			shoty(b) = shipy
			propsprite shot(b), 606, 0
			movesprite shot(b), shotx(b), shoty(b)
			b = 0
		endif
shootfail:
	endif
	if joy.4 = 0 then
		shotb4 = 0
	endif
	if joy.7 and pausedb4 = 0 then
		locate 20,5
		print "Paused, press A+B+C to quit"
		pausedb4 = 1
		joy = joypad(0)
		while 1 = 1
			joy = joypad(0)
			sleep 1
			if joy.7 = 0 then
				pausedb4 = 0
			endif
			if joy.7 and pausedb4 = 0 then
				goto unpause
			endif
			if joy.4 and joy.5 and joy.6 then
				ship = 0
				for i = 0 to 9
					enemy(i) = 0
					enemshot(i) = 0
					shot(i) = 0
				next
				for i = 0 to 4
					bs(i) = 0
					bsx(i) = 0
					bsy(i) = 0
				next
				score = 0
				freeallsprites
				goto main
			endif
		wend
unpause:
		pausedb4 = 1
		locate 20,5
		print "                            "
	endif
	if joy.7 = 0 then
		pausedb4 = 0
	endif
	for i = 0 to 4
		bsy(i) = bsy(i) + 5
		movesprite bs(i), bsx(i), bsy(i)
		msy(i) = msy(i) + 3
		movesprite ms(i), msx(i), msy(i)
		if bsy(i) > 370 then
			bsx(i) = rnd(320) + 128
			bsy(i) = rnd(125)
		endif
		if msy(i) > 370 then
			msx(i) = rnd(320) + 128
			msy(i) = rnd(125)
		endif
	next
	for i = 0 to 9
		if enemy(i) <> 0 then
			enemyy(i) = enemyy(i) + 2
			enemyx(i) = enemyx(i) + enemydeltax(i)
			movesprite enemy(i), enemyx(i), enemyy(i)
			if enemyy(i) = 180 and enemshot(i) = 0 then
				enemshot(i) = addsprite(1,1)
				enemshotx(i) = enemyx(i) + 8
				enemshoty(i) = enemyy(i) + 20
				propsprite enemshot(i), 578, 0
				movesprite enemshot(i), enemshotx(i), enemshoty(i)
			endif
			if enemyy(i) > 370 then
				freesprite enemy(i)
				enemy(i) = 0
			endif
			if enemyx(i)+24 > shipx and enemyy(i)+24 > shipy and enemyx(i) < shipx+24 and enemyy(i) < shipy+24 and explo(i) = 0 then
				for i = 0 to 9
					enemy(i) = 0
					enemshot(i) = 0
					explo(i) = 0
					shot(i) = 0
				next
				for i = 0 to 4
					bs(i) = 0
					bsx(i) = 0
					bsy(i) = 0
				next
				locate 15, 15
				print "You died."
				for i = 0 to 2
					propsprite ship, 579+(i*9), 0
					sleep 10
				next
				freesprite ship
				ship = 0
				if lives > 0 then
					sleep 70
					freeallsprites
					lives--
					levdiv = 1
					levwait = 0
					goto game
				else
					locate 16,14
					print "Game over"
					sleep 100
					freeallsprites
					score = 0
					goto main
				endif
			endif
		endif
		if shot(i) <> 0 then
			shoty(i) = shoty(i) - 5
			movesprite shot(i), shotx(i), shoty(i)
			if shoty(i) < 120 then
				freesprite shot(i)
				shot(i) = 0
			endif
			for n = 0 to 9
				if enemy(n) <> 0 then
					if enemyx(n)+24 > shotx(i) and enemyy(n)+24 > shoty(i) and enemyx(n) < shotx(i)+24 and enemyy(n) < shoty(i)+8 and explo(n) = 0 then
						freesprite shot(i)
						shot(i) = 0
						explo(n) = 1
						score = score + 20
						if score > hiscore then
							hiscore = score
						endif
					endif
				endif
			next
		endif
		if enemshot(i) <> 0 then
			enemshoty(i) = enemshoty(i) + 3
			movesprite enemshot(i), enemshotx(i), enemshoty(i)
			if enemshoty(i) > 370 then
				freesprite enemshot(i)
				enemshot(i) = 0
			endif
			if enemshotx(i)+8 > shipx and enemshoty(i)+8 > shipy and enemshotx(i) < shipx+24 and enemshoty(i) < shipy+24 then
				for i = 0 to 9
					enemy(i) = 0
					enemshot(i) = 0
					explo(i) = 0
					shot(i) = 0
				next
				for i = 0 to 4
					bs(i) = 0
					bsx(i) = 0
					bsy(i) = 0
				next
				locate 15, 15
				print "You died."
				for i = 0 to 2
					propsprite ship, 579+(i*9), 0
					sleep 10
				next
				freesprite ship
				ship = 0
				if lives > 0 then
					sleep 70
					freeallsprites
					lives--
					levdiv = 1
					levwait = 0
					goto game
				else
					locate 16,15
					print "Game over"
					sleep 100
					freeallsprites
					score = 0
					goto main
				endif
			endif
		endif
		if explo(i) = 1 and explowait(i) = 0 then
			propsprite enemy(i), 579, 0
			explo(i) = 2
			explowait(i) = 10
		endif
		if explo(i) = 2 and explowait(i) = 0 then
			propsprite enemy(i), 588, 0
			explo(i) = 3
			explowait(i) = 10
		endif
		if explo(i) = 3 and explowait(i) = 0 then
			propsprite enemy(i), 597, 0
			explo(i) = 4
			explowait(i) = 10
		endif
		if explo(i) = 4 and explowait(i) = 0 then
			freesprite enemy(i)
			enemy(i) = 0
			explo(i) = 0
		endif
		if explowait(i) > 0 then
			explowait(i)--
		endif
	next
	movesprite ship, shipx, shipy
	locate 1,1
	print "Lives: "; lives
	locate 1,12
	print "Score: "; score
	locate 1,27
	print "Hi: "; hiscore
	if levwait = 0 then
		if level = 1 then
			if levdiv = 1 then
				locate 12,15
				print "Get ready"
				levwait = 150
			elseif (levdiv >= 2 and levdiv <= 4) or (levdiv >= 14 and levdiv <= 16) then
				locate 12,15
				print "         "
				if levdiv = 4 or levdiv = 16 then
					levwait = 60
				else
					levwait = 20
				endif
				enemx = 160
				enemydx = 1
				gosub spawnenemy
			elseif (levdiv >= 5 and levdiv <= 7) or (levdiv >= 17 and levdiv <= 19) then
				if levdiv = 7 or levdiv = 19 then
					levwait = 60
				else
					levwait = 20
				endif
				enemx = 408
				enemydx = -1
				gosub spawnenemy
			elseif levdiv = 8 or levdiv = 10 or levdiv = 12 then
				levwait = 20
				enemx = 276
				enemydx = -1
				gosub spawnenemy
			elseif levdiv = 9 or levdiv = 11 or levdiv = 13 then
				if levdiv = 13 then
					levwait = 60
				else
					levwait = 20
				endif
				enemx = 276
				enemydx = 1
				gosub spawnenemy
			elseif levdiv = 20 then
				levwait = 20
				enemx = 276
				enemydx = 0
				gosub spawnenemy
			elseif levdiv = 21 then
				levwait = 20
				enemx = 244
				enemydx = 0
				gosub spawnenemy
				enemx = 308
				gosub spawnenemy
			elseif levdiv = 22 then
				levwait = 120
				enemx = 212
				enemydx = 0
				gosub spawnenemy
				enemx = 340
				gosub spawnenemy
			elseif levdiv = 23 or levdiv = 25 then
				levwait = 60
				enemx = 160
				enemydx = 0
				gosub spawnenemy
				enemx = 192
				gosub spawnenemy
				enemx = 224
				gosub spawnenemy
			elseif levdiv = 24 or levdiv = 26 then
				levwait = 60
				enemx = 408
				enemydx = 0
				gosub spawnenemy
				enemx = 376
				gosub spawnenemy
				enemx = 344
				gosub spawnenemy
			else
				levwait = 30000
			endif
		endif
		levdiv++
	endif
	if levwait > 0 then
		levwait--
	endif
	sleep 1
	goto gameloop

